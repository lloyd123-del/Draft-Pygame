import pygame
import random

pygame.init()

# Load and scale the background
background = pygame.image.load('images/background.png')
background = pygame.transform.scale(background, (1200, 700))

class IdleChara:
    def __init__(self):
        self.sprites = [
            pygame.image.load(f'images/idle_character/{i + 1}.png')
            for i in range(10)
        ]

        # Resize the idle character sprites
        self.sprites = [pygame.transform.scale(sprite, (300, 300)) for sprite in self.sprites]

        self.current_sprite = 0
        self.image = self.sprites[self.current_sprite]
        self.rect = self.image.get_rect(topleft=(-20, 400))

        self.frame_counter = 0
        self.frame_delay = 15

    def update(self):
        self.frame_counter += 1
        if self.frame_counter >= self.frame_delay:
            self.frame_counter = 0
            self.current_sprite += 1
            if self.current_sprite >= len(self.sprites):
                self.current_sprite = 0
            self.image = self.sprites[self.current_sprite]

def trash_image(num_trashes, image_path, scale_size):
    trashes = []
    for _ in range(num_trashes):
        image = pygame.image.load(image_path)
        image = pygame.transform.scale(image, scale_size)
        x = random.randint(50, 1000)
        y = random.randint(50, 500)
        rect = image.get_rect(topleft=(x, y))
        trashes.append((image, rect))
    return trashes

def gameplay():
    width, height = 1200, 700
    screen = pygame.display.set_mode((width, height))
    pygame.display.set_caption("Sample dragging / gameplay")

    active_trash = None
    residual_trashes = trash_image(1, 'images/plastic_bottle.png', (60, 60))
    plastic_trashes = trash_image(1, 'images/plastic_bottle.png', (60, 60))
    bio_trashes = trash_image(1, 'images/plastic_bottle.png', (60, 60))

    character = IdleChara()

    running = True
    while running:
        for event in pygame.event.get():
            pos = pygame.mouse.get_pos()

            if event.type == pygame.MOUSEBUTTONDOWN:
                if event.button == 1:
                    for trash_list in [residual_trashes, plastic_trashes, bio_trashes]:
                        for image, rect in trash_list:
                            if rect.collidepoint(event.pos):
                                active_trash = rect

            if event.type == pygame.MOUSEBUTTONUP:
                if event.button == 1:
                    active_trash = None

            if event.type == pygame.MOUSEMOTION:
                if active_trash:
                    active_trash.move_ip(event.rel)

            if event.type == pygame.QUIT:
                running = False

        screen.blit(background, (0, 0))

        for image, rect in residual_trashes + plastic_trashes + bio_trashes:
            screen.blit(image, rect)

        character.update()
        screen.blit(character.image, character.rect)

        pygame.display.flip()

    pygame.quit()

# Run gameplay function if this script is executed directly
if __name__ == "__main__":
    gameplay()
